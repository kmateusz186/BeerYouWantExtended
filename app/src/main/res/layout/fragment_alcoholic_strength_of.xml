<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText android:id="@+id/mlBeer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:hint="@string/beer_ml"/>
    <EditText android:id="@+id/alcoholContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/alcohol_content"/>
    <EditText
        android:id="@+id/weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/weight"/>
    <RadioGroup
        android:id="@+id/sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="3"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/woman" />

        <RadioButton
            android:id="@+id/radio_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/man" />
    </RadioGroup>
    <Button
        android:id="@+id/calculatePromil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calculate_promile"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/welcome_button"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/velueOfPromil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/timeSobering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/startTime"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/welcome_button"
        android:textSize="15sp"
        android:textStyle="bold"/>
</LinearLayout>